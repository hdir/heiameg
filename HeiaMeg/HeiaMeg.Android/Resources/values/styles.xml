<?xml version="1.0" encoding="UTF-8"?>
<resources>
  <style name="MainTheme" parent="MainTheme.Base">
    <item name="android:windowBackground">@drawable/launch_screen</item>
  </style>

  <style name="SplashTheme" parent="MainTheme.Base">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@color/custom_theme_color</item>
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#18535f</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#18535f</item>
    <!-- Main color for widgets -->
    <item name="colorAccent">#18535f</item>
    <!-- Switch thumbnail color -->
    <item name="colorControlActivated">#F8533E</item>

    <!-- software back buttons background same as tabpanel -->
    <item name="android:navigationBarColor">#18535f</item>

    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:colorActivatedHighlight">@android:color/transparent</item>
    <item name="android:textColorLink">@android:color/white</item>
  </style>
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#18535f</item>
  </style>
</resources>